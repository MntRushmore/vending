# Vending Stream Analytics Environment Configuration
# Copy this file to .env and update the values for your environment

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Application Configuration
APP_NAME=Vending Stream Analytics
APP_VERSION=2.0.0
APP_URL=https://analytics.yourdomain.com

# WebSocket Configuration
DEFAULT_WEBSOCKET_URL=wss://your-websocket-server.com/ws
WS_RECONNECT_DELAY=3000
WS_MAX_RECONNECT_ATTEMPTS=10

# Security Configuration
SECRET_KEY=your-secret-key-here
CORS_ORIGIN=https://yourdomain.com
ENABLE_HTTPS=true

# Database Configuration (for future expansion)
DATABASE_URL=postgresql://user:password@localhost:5432/vending_stream
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_ACCESS_LOG=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9100
HEALTH_CHECK_INTERVAL=30000

# Email Configuration (for alerts)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-smtp-password
ADMIN_EMAIL=admin@yourdomain.com

# External Services
WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
API_KEY=your-api-key

# Feature Flags
ENABLE_INVENTORY_MANAGEMENT=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_EXPORT_FUNCTIONALITY=true
ENABLE_SOUND_EFFECTS=true

# Performance Configuration
MAX_FEED_ITEMS=50
CACHE_EXPIRY=86400000
MAX_MEMORY_RESTART=500M

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_TAG=latest

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# Development Configuration
DEBUG_MODE=false
ENABLE_DEV_TOOLS=false
MOCK_DATA=false