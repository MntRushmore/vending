{
  "name": "vending-stream-analytics",
  "version": "2.0.0",
  "description": "Modern real-time analytics dashboard for vending machine sales tracking",
  "main": "server.js",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "production": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:logs": "pm2 logs vending-stream-analytics --lines 50",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "setup:logs": "mkdir -p logs",
    "setup:production": "npm run setup:logs && pm2 start ecosystem.config.js --env production",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "echo \"No linting configured\"",
    "build": "echo 'Static files ready for deployment'",
    "deploy": "pm2 deploy ecosystem.config.js production",
    "backup": "tar -czf backup-$(date +%Y%m%d-%H%M%S).tar.gz --exclude=node_modules --exclude=logs --exclude=*.tar.gz .",
    "logs:error": "tail -f logs/error.log",
    "logs:out": "tail -f logs/out.log",
    "logs:combined": "tail -f logs/combined.log"
  },
  "keywords": [
    "vending-machine",
    "analytics",
    "dashboard",
    "real-time",
    "websocket",
    "charts",
    "inventory",
    "sales-tracking",
    "cyberpunk",
    "modern-web"
  ],
  "author": {
    "name": "Vending Stream Analytics Team",
    "email": "support@vendingstream.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/vending-stream-analytics.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/vending-stream-analytics/issues"
  },
  "homepage": "https://github.com/your-username/vending-stream-analytics#readme",
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "dependencies": {},
  "optionalDependencies": {
    "pm2": "^5.3.0"
  },
  "files": [
    "index.html",
    "server.js",
    "ecosystem.config.js",
    "assets/",
    "components/",
    "utils/",
    "README.md",
    "LICENSE"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "config": {
    "port": 3000,
    "host": "0.0.0.0"
  },
  "pm2": {
    "apps": [
      {
        "name": "vending-stream-analytics",
        "script": "server.js",
        "instances": 1,
        "exec_mode": "cluster",
        "env": {
          "NODE_ENV": "production",
          "PORT": 3000
        }
      }
    ]
  }
}